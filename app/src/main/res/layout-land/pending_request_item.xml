<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    >
    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pendingRequestCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:id="@+id/pendingRequestRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/restaurantNameTextView"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/restaurantAddressTextView"
                android:layout_toEndOf="@+id/restaurantNameTextView"
                android:layout_marginBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:drawableStart="@drawable/address_icon"/>

            <LinearLayout
                android:id="@+id/boxesLinearLayout"
                android:layout_below="@+id/restaurantAddressTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <RelativeLayout
                    android:id="@+id/paymentRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_edge"
                    android:layout_margin="4dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/paymentTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/payment"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:padding="4dp"
                        android:textAlignment="center"
                        android:textColor="@color/light_black"/>
                    <TextView
                        android:id="@+id/paymentTypeTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/paymentTextView"
                        android:layout_toStartOf="@+id/priceTextView"
                        android:textSize="18sp"
                        android:padding="4dp"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/priceTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/paymentTextView"
                        android:layout_alignParentEnd="true"
                        android:textSize="18sp"
                        android:padding="4dp"
                        android:layout_marginEnd="4dp"
                        android:textColor="@android:color/black"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/distanceRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_edge"
                    android:layout_margin="4dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/distanceTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/distance"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:padding="4dp"
                        android:textAlignment="center"
                        android:textColor="@color/light_black"/>
                    <TextView
                        android:id="@+id/distance_placedTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/distanceTextView"
                        android:textSize="18sp"
                        android:padding="4dp"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonsLinearLayout"
                android:layout_below="@+id/boxesLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <Button
                    android:id="@+id/acceptButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/green_800"
                    android:text="@string/accept"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:layout_margin="4dp"
                    android:visibility="visible"
                    android:textColor="@android:color/white"/>

                <Button
                    android:id="@+id/rejectButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/red_800"
                    android:text="@string/reject"
                    android:layout_margin="4dp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:visibility="visible"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:id="@+id/accrejTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:visibility="gone"
                    android:layout_margin="4dp"
                    android:textStyle="bold|italic"
                    android:textSize="16sp"
                    android:textAlignment="center"/>
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>