<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBackground</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorDark</item>
        <!-- <item name="android:actionBarStyle">@style/MyActionBarTheme</item> -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyActionBarTheme">
        <item name="android:background">@color/colorBackground</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="login_text_input_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/light_yellow</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="login_label_text" parent="@android:style/TextAppearance">
        <item name="colorAccent">@color/light_yellow</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/light_yellow</item>
        <item name="android:textCursorDrawable">@color/light_yellow</item>
    </style>

    <style name="login_edit_text_theme" parent="@style/AppTheme">
        <item name="colorAccent">@color/light_yellow</item>
    </style>

</resources>
